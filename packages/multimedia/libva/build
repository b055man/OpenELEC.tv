. config/options $1

cd $PKG_BUILD
mkdir -p m4 && do_autoreconf
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --disable-silent-rules \
            --disable-docs \
            --enable-drm \
            --enable-x11 \
            --enable-glx \
            --disable-egl \
            --disable-wayland \
            --disable-dummy-driver \
            --with-drivers-path="/usr/lib/va" \

make
$MAKEINSTALL
