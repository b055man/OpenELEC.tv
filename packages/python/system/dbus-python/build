. config/options $1

PYTHON_LIBDIR="`ls -d $SYSROOT_PREFIX/usr/lib/python*`"
PYTHON_HOST_LIBDIR="`ls -d $ROOT/$TOOLCHAIN/lib/python*`"

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \

make CFLAGS="$TARGET_CFLAGS"

$MAKEINSTALL

python -Wi -t -B $PYTHON_HOST_LIBDIR/compileall.py ./dbus -f
